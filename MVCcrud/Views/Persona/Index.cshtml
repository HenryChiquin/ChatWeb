@model List<MVCcrud.Models.ViewModel.ListPersonaViewModel>
@{
    ViewBag.Title = "Datos Persona";
}

<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;padding:35px">
    <a href="~/PERSONA/Nuevo" class="btn btn-primary"> Nuveo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">                
            <tr>
                <th>#</th>
                <th>Nombre</th> 
                <th>Correo</th>
                <th>Fecha Nacimiento</th>
                <th></th>

            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id_Persona</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Correo</td>
                    <td>@oElemento.Fecha_Nacimiento</td>
                    <td>
                        <a class="btn btn-default" href="~/Persona/Editar/@oElemento.Id_Persona">Editar</a>
                        <a class="btn btn-danger" href="~/Persona/Eliminar/@oElemento.Id_Persona">Eliminar</a>
                    </td>
                </tr>

            }

        </table>
    </div>
</div>

